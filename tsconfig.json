{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "pretty": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false
}
